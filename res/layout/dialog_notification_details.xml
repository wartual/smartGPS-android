<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/category" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/category" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/thumbs_up_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
           	android:orientation="vertical"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/thumbs_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="18dp"
                android:src="@drawable/icon_thumbs_up" />

            <TextView
                android:id="@+id/thumps_up_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="22dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/thumbs_down_placeholder"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/thumbs_up_placeholder"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/thumbs_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:src="@drawable/icon_thumbs_down" />

            <TextView
                android:id="@+id/thumps_down_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbs_down"
                android:paddingLeft="22dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>